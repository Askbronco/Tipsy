<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_visa_checkout_sv_signup_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/com_visa_checkout_sixty_px"
    android:layout_marginLeft="@dimen/com_visa_checkout_layout_margin_left_right"
    android:layout_marginRight="@dimen/com_visa_checkout_layout_margin_left_right"
    android:background="@color/com_visa_checkout_layout_background"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/com_visa_checkout_rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/com_visa_checkout_iv_welcome_merchant_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/com_visa_checkout_fifty_px"
            android:layout_marginTop="@dimen/com_visa_checkout_two_hundred_px"
            android:layout_marginLeft="@dimen/com_visa_checkout_thirty_two_px"
            android:layout_marginRight="@dimen/com_visa_checkout_thirty_two_px"
            android:src="@drawable/com_visa_checkout_flowers_merchant_logo"/>

        <TextView
            android:id="@+id/com_visa_checkout_tv_welcome_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/com_visa_checkout_thirty_five_px"
            android:layout_marginBottom="@dimen/com_visa_checkout_thirty_five_px"
            android:textSize="@dimen/com_visa_checkout_global_font_xxlarge"
            android:gravity="center"
            android:maxLines="2"
            android:layout_below="@id/com_visa_checkout_iv_welcome_merchant_logo"/>

        <TextView
            android:id="@+id/com_visa_checkout_tv_welcome_sub_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/com_visa_checkout_thirty_five_px"
            android:layout_marginBottom="@dimen/com_visa_checkout_thirty_five_px"
            android:textSize="@dimen/com_visa_checkout_exo_links_font"
            android:gravity="center"
            android:maxLines="2"
            android:layout_below="@id/com_visa_checkout_tv_welcome_header"/>

        <include
            android:id="@+id/com_visa_checkout_welcome_terms"
            layout="@layout/com_visa_checkout_layout_terms_privacy_lock_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:id="@+id/com_visa_checkout_welcome_go_to_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/com_visa_checkout_welcome_terms"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/com_visa_checkout_sixty_px">

            <TextView
                android:id="@+id/com_visa_checkout_tvSignUpAlreadyHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/com_visa_checkout_sup_tvSignUpAlreadyHaveAccount"
                android:textColor="@color/com_visa_checkout_global_font_dark_grey"
                android:textSize="@dimen/com_visa_checkout_global_font_small" />

            <TextView
                android:id="@+id/com_visa_checkout_tvSignUpGoToSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_visa_checkout_pl_thirty_px"
                android:contentDescription="@string/com_visa_checkout_sup_tvSignUpSignIn_content_description"
                android:drawablePadding="@dimen/com_visa_checkout_twenty_px"
                android:drawableRight="@drawable/com_visa_checkout_icon_rightarrow"
                android:gravity="center_vertical"
                android:minHeight="@dimen/com_visa_checkout_fifty_px"
                android:text="@string/com_visa_checkout_sup_tvSignUpSignIn"
                android:textColor="@color/com_visa_checkout_global_font_medium_grey"
                android:textSize="@dimen/com_visa_checkout_global_font_small" />
        </LinearLayout>

        <Button
            android:id="@+id/com_visa_checkout_bt_welcome_continue"
            style="@style/com_visa_checkout_VisaCheckoutGoldButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/com_visa_checkout_welcome_go_to_sign_in"
            android:layout_marginBottom="@dimen/com_visa_checkout_eighty_px"
            android:layout_marginTop="@dimen/com_visa_checkout_sixty_px"
            android:text="@string/com_visa_checkout_sup_btSignUpContinue" />

    </RelativeLayout>
</ScrollView>