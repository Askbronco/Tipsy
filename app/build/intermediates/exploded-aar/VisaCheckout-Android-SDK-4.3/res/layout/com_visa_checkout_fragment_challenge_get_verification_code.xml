<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_visa_checkout_sv_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/com_visa_checkout_layout_background"
    android:isScrollContainer="false"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/com_visa_checkout_rl_body_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/com_visa_checkout_tv_get_verification_code"
            style="@style/com_visa_checkout_VisaCheckoutTextViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/com_visa_checkout_get_verification_code" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/com_visa_checkout_forgotPassword_error_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/com_visa_checkout_tv_get_verification_code">

            <include
                android:id="@+id/com_visa_checkout_forgotPassword_includedServerSideError"
                layout="@layout/com_visa_checkout_server_side_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/com_visa_checkout_forgotPassword_includedServerSideAlert"
                layout="@layout/com_visa_checkout_server_side_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/com_visa_checkout_tv_get_verification_code_info"
            style="@style/com_visa_checkout_VisaCheckoutTextViewSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/com_visa_checkout_forgotPassword_error_container"
            android:layout_marginTop="@dimen/com_visa_checkout_pl_seventy_px"
            android:text="@string/com_visa_checkout_send_verification_code_info" />

        <LinearLayout
            android:id="@+id/com_visa_checkout_tv_email_info"
            android:layout_below="@id/com_visa_checkout_tv_get_verification_code_info"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/com_visa_checkout_tv_email_text"
                android:layout_marginLeft="@dimen/com_visa_checkout_layout_margin_left_right"
                android:textColor = "@color/com_visa_checkout_global_font_medium_grey"
                android:textSize="@dimen/com_visa_checkout_global_font_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_visa_checkout_pl_seventy_px"
                android:text="@string/com_visa_checkout_email_text" />

            <TextView
                android:id="@+id/com_visa_checkout_tv_emailID"
                android:textColor = "@color/com_visa_checkout_global_font_medium_grey"
                android:textSize="@dimen/com_visa_checkout_global_font_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/com_visa_checkout_tv_get_verification_code_info"
                android:layout_marginTop="@dimen/com_visa_checkout_pl_seventy_px"/>
        </LinearLayout>

        <Button
            android:id="@+id/com_visa_checkout_bt_continue"
            style="@style/com_visa_checkout_VisaCheckoutGoldButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/com_visa_checkout_tv_email_info"
            android:layout_marginTop="25dp"
            android:text="@string/com_visa_checkout_bt_continue" />

        <include
            android:id="@+id/com_visa_checkout_forgotPassword_terms"
            layout="@layout/com_visa_checkout_layout_terms_privacy_lock_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</RelativeLayout>

